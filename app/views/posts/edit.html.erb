<div class="contents row">
  <div class="container">
    <h3>編集する</h3>
    <%= form_with(model: @post, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "Title" %>
      <%= form.text_field :date, placeholder: "Date" %>
      <%= form.text_field :address, placeholder: "Address" %>
      <%= form.text_area :text, placeholder: "text", rows: "10" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_field :evaluation, placeholder: "Evaluation" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>